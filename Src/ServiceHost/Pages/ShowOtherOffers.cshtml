@page
@model ServiceHost.Pages.ShowOtherOffersModel
@{
    ViewData["Title"] = "دیگر پیشنهاد ها";

}

    <div class="container mt-5 mb-md-4 py-5">
        <div class="row py-md-1">

            <div class="col-lg-12">
                <!-- Breadcrumb-->
                <nav class="mb-3 pt-md-2 pt-lg-4" aria-label="Breadcrumb">
                    <ol class="breadcrumb breadcrumb-light">
                        <li class="breadcrumb-item"><a asp-page="./Index">خانه</a></li>
                        <li class="breadcrumb-item active" aria-current="page">نمایش پیشنهاد های پروژه</li>
                    </ol>
                </nav>
                <!-- Page title-->
                <div class="d-flex align-items-center justify-content-between pb-4 mb-2">
                    <h1 class="text-light me-3 mb-0 font-vazir h4">پروژه ها</h1>
                    <div class="text-light"><i class="fi-device-desktop fs-lg me-2"></i><span class="align-middle">@Model.ProjectOffers.Count() نتیجه</span></div>
                </div>
                
                <div class="row">

                    @foreach (var project in Model.ProjectOffers)
                    {
                        <div class="col-12 mt-3">
                        <div class="row bg-gradient card-hover h-100 text-white" style="border-radius: 20px">
                            <div class="col-12">
                                <div class="card-body">
                                    <h3 class="h6 card-title mb-2">
                                        <a class="text-nav text-decoration-none" asp-page="./ProjectDetails" asp-route-id="@project.Id">@project.Title</a>
                                    </h3>
                                    <p class="fs-sm mb-0">
                                     @project.Description
                                    </p>
                                </div>
                            </div>

                            <div class="card-footer d-flex align-items-center justify-content-between border-0 pt-0">
                                <div class="fs-sm">
                                    <span class="text-nowrap me-3"><i class="fi-cash fs-base text-muted ms-1"></i>قیمت پیشنهادی : @project.Price</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    }
                    

                </div>
              
            </div>
        </div>
    </div>
