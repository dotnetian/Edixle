@page
@model IndexModel
@{
    ViewData["Title"] = "خانه";
    ViewData["MetaDescription"] = "سایت نمونه - example.com، پلتفرم ایجاد بازار رقابتی برای ادیتور ها و کارفرماها";
    ViewData["Keywords"] = "نمونه, example.com, ادیتور, استخدام ادیتور, تدوینگر, استخدام تدوینگر";
}

@section Css
    {
    <link rel="stylesheet" media="screen" href="~/MainTheme/vendor/nouislider/dist/nouislider.min.css" />
}
    @section Script
    {
    <script src="~/MainTheme/vendor/nouislider/dist/nouislider.min.js"></script>
}
    <!-- Page content-->
    <!-- Hero + Search form-->
    <section class="bg-top-center bg-repeat-0 pt-5"
         style="background-image: url(~/MainTheme/img/car-finder/home/hero-bg.png); background-size: 1920px 630px;">
        <div class="container pt-5">
            <div class="row pt-lg-0 pb-3 pt-xl-0">

                <div class="col-lg-4 col-md-5 pt-3 pt-md-4 pt-lg-5 pb-4 text-center">
                    <img src="~/icons/edixle_logo.png" style="width: 500px" />
                    <p class="fs-lg text-light opacity-70 line-h18">
                        جستجوی سریع و پیشرفته بین صدها ادیتور، نمونه کار و پروژه.
                    </p>
                </div>


                <div class="col-lg-8">

                    <div class="row pt-4 pb-3">

                        <div class="col-6">

                        <a class="card shadow-lg card-hover border-0  bg-gradient" style="border-top-left-radius: 0px; border-top-right-radius: 40px; " asp-page="/SearchEditors">

                                <div class="card-body text-center">
                                    <h3 class="mb-0 fs-base text-light">دنبال ادیتور میگردم!</h3>
                                </div>
                            <div class="card-img-bottom card-img-hover" style="border-bottom-left-radius: 0px; border-top-right-radius: 50px; background-color: #1f1b2d">
                                    <span class="img-overlay opacity-65"></span><img src="~/icons/video-playlist.png" alt="Chicago">
                                    <div class="content-overlay start-0 top-0 d-flex align-items-center justify-content-center w-100 h-100 p-3">
                                        <div class="w-100 p-1">
                                            <div class="mb-2">
                                                <h4 class="mb-2 fs-xs fw-normal text-light"><i class="fi-video mt-n1 me-2 fs-sm align-middle"></i>ادیتور های برتر</h4>
                                                <div class="d-flex align-items-center">
                                                    <div class="progress progress-light w-100">
                                                        <div class="progress-bar bg-gradient" role="progressbar" style="width: @Model.EditorsCount.TotalTopPagesPercent%" aria-valuenow="@Model.EditorsCount.TotalTopPagesPercent" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div><span class="text-light fs-sm ps-1 ms-2">@Model.EditorsCount.TotalTopPages</span>
                                                </div>
                                            </div>
                                            <div class="pt-1">
                                                <h4 class="mb-2 fs-xs fw-normal text-light"><i class="fi-video mt-n1 me-2 fs-sm align-middle"></i>کل ادیتور ها</h4>
                                                <div class="d-flex align-items-center">
                                                    <div class="progress progress-light w-100">
                                                        <div class="progress-bar bg-gradient" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div><span class="text-light fs-sm ps-1 ms-2">@Model.EditorsCount.TotalPages</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </a>
                        </div>

                        <div class="col-6">
                            <a class="card shadow-lg card-hover border-0 bg-gradient" style="border-top-right-radius: 0px; border-top-left-radius: 40px;" asp-page="/SearchProjects">

                                <div class="card-body text-center">
                                    <h3 class="mb-0 fs-base text-light">دنبال پروژه میگردم!</h3>
                                </div>
                            <div class="card-img-bottom card-img-hover" style="border-bottom-right-radius: 0px; border-top-left-radius: 40px; background-color: #1f1b2d">
                                <span class="img-overlay opacity-65"></span><img src="~/icons/group-of-projects.png" alt="Chicago">
                                    <div class="content-overlay start-0 top-0 d-flex align-items-center justify-content-center w-100 h-100 p-3">
                                        <div class="w-100 p-1">
                                            <div class="mb-2">
                                                <h4 class="mb-2 fs-xs fw-normal text-light"><i class="fi-file mt-n1 me-2 fs-sm align-middle"></i>پروژه های باز</h4>
                                                <div class="d-flex align-items-center">
                                                    <div class="progress progress-light w-100">
                                                        <div class="progress-bar bg-gradient" role="progressbar" style="width: @Model.ProjectsCount.TotalOpenProjectsPercent%" aria-valuenow="@Model.ProjectsCount.TotalOpenProjectsPercent" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div><span class="text-light fs-sm ps-1 ms-2">@Model.ProjectsCount.TotalOpenProjectsCount</span>
                                                </div>
                                            </div>
                                            <div class="pt-1">
                                                <h4 class="mb-2 fs-xs fw-normal text-light"><i class="fi-file mt-n1 me-2 fs-sm align-middle"></i>کل پروژه ها</h4>
                                                <div class="d-flex align-items-center">
                                                    <div class="progress progress-light w-100">
                                                        <div class="progress-bar bg-gradient" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div><span class="text-light fs-sm ps-1 ms-2">@Model.ProjectsCount.TotalProjectsCount</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="container mt-4 mt-sm-3 mt-lg-n3 pb-5 mb-md-4">
            <ul class="nav nav-pills mb-3" role="tablist">
                <li class="nav-item">
                    <a class="nav-link btn btn-accent bg-gradient mt-2 active" href="#home1" id="pills-home1" data-bs-toggle="pill" role="tab" aria-controls="home1" aria-selected="true">
                        <i class="fi-video me-2"></i>ویدیو ها
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link btn btn-accent bg-gradient mt-2" href="#profile1" id="pills-profile1" data-bs-toggle="pill" role="tab" aria-controls="profile1" aria-selected="false">
                        <i class="fi-folder me-2"></i>پروژه ها
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link btn btn-accent bg-gradient mt-2" href="#editors" id="pills-editors" data-bs-toggle="pill" role="tab" aria-controls="editors" aria-selected="false">
                        <i class="fi-users me-2"></i>ادیتور ها
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade active show" id="home1" role="tabpanel" aria-labelledby="pills-home1">
                    <!-- Form group-->
                    <form class="form-group form-group-light d-block" method="get" asp-page="./SearchPortfolios">
                        <div class="row g-0 me-lg-n2">
                            <div class="col-lg-6">
                                <div class="input-group border-end-lg border-light">
                                    <span class="input-group-text text-muted ps-2 ps-sm-3"><i class="fi-search"></i></span>
                                    <input class="form-control" type="text" id="query" name="query" placeholder="دنبال چه ویدیویی میگردی؟">
                                </div>
                            </div>
                            <hr class="hr-light d-lg-none my-2">

                            <div class="col-lg-2 col-md-3 col-sm-6">
                                <div class="dropdown border-end-md border-light" data-bs-toggle="select">
                                    <button class="btn btn-link dropdown-toggle ps-2 ps-sm-3" type="button" data-bs-toggle="dropdown">
                                        <i class="fi-list me-2"></i><span class="dropdown-toggle-label">گروه ها</span>
                                    </button>
                                    <input type="hidden" name="model">
                                    <ul class="dropdown-menu dropdown-menu-dark">
                                    @foreach (var category in Model.PortfolioCategories)
                                    {
                                        <li>
                                            <div class="form-check form-check-light">
                                                <input class="form-check-input" type="checkbox" asp-for="SelectedCategoriesDictionary[category.Id]">
                                                <label class="form-check-label fs-sm">@category.Name</label>
                                            </div>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                        <hr class="hr-light d-md-none my-2">
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div class="dropdown border-end-sm border-light" data-bs-toggle="select">
                                <button class="btn btn-link dropdown-toggle ps-2 ps-sm-3" type="button" data-bs-toggle="dropdown">
                                    <i class="fi-computer fs-lg me-2"></i><span class="dropdown-toggle-label">ترتیب نمایش</span>
                                </button>
                                <input type="hidden" name="type">
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <select id="orderId" name="orderId" class="form-select form-select-light mb-2">
                                        <option value="" disabled selected>جدیدترین</option>
                                        <option value="1">جدیدترین</option>
                                        <option value="2">برترین</option>
                                    </select>
                                </ul>
                            </div>
                        </div>
                        <hr class="hr-light d-sm-none my-2">
                        <hr class="hr-light d-lg-none my-2">
                        <div class="col-lg-2">
                            <button class="btn btn-primary w-100" type="submit">جستجو</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="profile1" role="tabpanel" aria-labelledby="pills-profile1">
                <form class="form-group form-group-light d-block" method="get" asp-page="./SearchProjects">
                    <div class="row g-0 me-lg-n2">
                        <div class="col-lg-4">
                            <div class="input-group border-end-lg border-light">
                                <span class="input-group-text text-muted ps-2 ps-sm-3"><i class="fi-search"></i></span>
                                <input class="form-control" type="text" id="query" name="query" placeholder="دنبال چه پروژه ای میگردی؟">
                            </div>
                        </div>
                        <hr class="hr-light d-lg-none my-2">
                        <hr class="hr-light d-md-none my-2">
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div class="pt-3 pe-3">
                                <div class="form-check">
                                    <input class="form-check-input" id="isOpen" name="isOpen" type="checkbox">
                                    <label class="form-check-label" for="isOpen">پروژه های باز</label>
                                </div>
                            </div>
                        </div>
                        <hr class="hr-light d-lg-none my-2">
                        <hr class="hr-light d-md-none my-2">

                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div>
                                <h3 class="fs-base font-vazir text-light">بودجه</h3>
                                <div class="range-slider-money range-slider-light-money mb-3" data-start-min="25000" data-start-max="6500000" data-min="1000" data-max="10000000" data-step="1000">
                                    <div class="range-slider-ui-money"></div>
                                    <div class="d-flex align-items-center">
                                        <div class="w-50 pe-2">
                                            <input id="minPay" name="minPay" class="form-control form-control-light range-slider-value-min-money" type="hidden">
                                        </div>
                                        <div class="w-50 ps-2">
                                            <input id="maxPay" name="maxPay" class="form-control form-control-light range-slider-value-max-money" type="hidden">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="hr-light d-lg-none my-2">
                        <hr class="hr-light d-md-none my-2">
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div class="dropdown border-end-sm border-light" data-bs-toggle="select">
                                <button class="btn btn-link dropdown-toggle ps-2 ps-sm-3" type="button" data-bs-toggle="dropdown">
                                    <i class="fi-computer fs-lg me-2"></i><span class="dropdown-toggle-label">ترتیب نمایش</span>
                                </button>
                                <input type="hidden" name="type">
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <select id="orderId" name="orderId" class="form-select form-select-light mb-2">
                                        <option value="" disabled selected>جدیدترین</option>
                                        <option value="1">جدیدترین</option>
                                        <option value="2">بیشترین بودجه</option>
                                    </select>
                                </ul>
                            </div>
                        </div>
                        <hr class="hr-light d-sm-none my-2">
                        <hr class="hr-light d-lg-none my-2">
                        <div class="col-lg-2">
                            <button class="btn btn-primary w-100" type="submit">جستجو</button>
                        </div>
                    </div>
                </form>

            </div>
            <div class="tab-pane fade" id="editors" role="tabpanel" aria-labelledby="pills-editors">
                <form class="form-group form-group-light d-block" method="get" asp-page="./SearchEditors">
                    <div class="row g-0 me-lg-n2">
                        <div class="col-lg-4">
                            <div class="input-group border-end-lg border-light">
                                <span class="input-group-text text-muted ps-2 ps-sm-3"><i class="fi-search"></i></span>
                                <input class="form-control" type="text" id="searchWord" name="searchWord" placeholder="دنبال چه ادیتوری میگردی؟">
                            </div>
                        </div>
                        <hr class="hr-light d-lg-none my-2">
                        <hr class="hr-light d-md-none my-2">
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div class="pt-3 pe-3">
                                <div class="form-check">
                                    <input class="form-check-input" id="isBusy" name="isBusy" type="checkbox">
                                    <label class="form-check-label" for="isBusy">ادیتور های آزاد</label>
                                </div>
                            </div>
                        </div>
                        <hr class="hr-light d-lg-none my-2">
                        <hr class="hr-light d-md-none my-2">

                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div>
                                <h3 class="fs-base font-vazir text-light">دستمزد</h3>
                                <div class="range-slider-money range-slider-light-money mb-3" data-start-min="25000" data-start-max="6500000" data-min="1000" data-max="10000000" data-step="1000">
                                    <div class="range-slider-ui-money"></div>
                                    <div class="d-flex align-items-center">
                                        <div class="w-50 pe-2">
                                            <input id="minPay" name="minPay" class="form-control form-control-light range-slider-value-min-money" type="hidden">
                                        </div>
                                        <div class="w-50 ps-2">
                                            <input id="maxPay" name="maxPay" class="form-control form-control-light range-slider-value-max-money" type="hidden">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="hr-light d-lg-none my-2">
                        <hr class="hr-light d-md-none my-2">
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <div class="dropdown border-end-sm border-light" data-bs-toggle="select">
                                <button class="btn btn-link dropdown-toggle ps-2 ps-sm-3" type="button" data-bs-toggle="dropdown">
                                    <i class="fi-computer fs-lg me-2"></i><span class="dropdown-toggle-label">ترتیب نمایش</span>
                                </button>
                                <input type="hidden" name="type">
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <select id="orderId" name="orderId" class="form-select form-select-light mb-2">
                                        <option value="" disabled selected>انتخاب کنید</option>
                                        <option value="1">بهترین ها</option>
                                        <option value="2">جدیدترین ها</option>
                                    </select>
                                </ul>
                            </div>
                        </div>
                        <hr class="hr-light d-sm-none my-2">
                        <hr class="hr-light d-lg-none my-2">
                        <div class="col-lg-2">
                            <button class="btn btn-primary w-100" type="submit">جستجو</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>

    </div>
</section>



<!-- Body type selection-->
<section class="container pb-5 mb-md-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-3 mb-sm-4 pb-sm-2">
        <h2 class="h4 text-light mrgolabvand mb-2 mb-sm-0 font-vazir">گروه ها</h2><a class="btn btn-link btn-light fw-normal px-0"
                                                                         asp-page="./SearchPortfolios">مشاهده همه<i class="fi-arrow-long-left fs-sm mt-0 ps-1 ms-2"></i></a>
    </div>
    <form method="get" asp-page="./SearchPortfolios">

        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-2 g-md-4">
            @foreach (var category in Model.PortfolioCategories)
            {
                <!-- Item-->
                <div class="col">
                    <div class="card card-body card-light card-hover bg-transparent border-0 px-0 pt-0 text-center">
                        <img class="d-block mx-auto mb-3" src="~/UploadedFiles/@category.Picture" width="100" alt="@category.PictureAlt" title="@category.PictureTitle">
                        <button style="background-color: #1f1b2d;border: none;" class="nav-link-light stretched-link fw-bold" type="submit" onclick="document.getElementById('bcc-@category.Id').value = true">@category.Name</button>
                        <input type="hidden" id="bcc-@category.Id" name="SelectedCategoriesDictionary[@category.Id]" value="false" />
                    </div>
                </div>
            }

        </div>
    </form>
</section>
<!-- Top offers-->
<section class="container pt-sm-1 pb-5 mb-md-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4 pb-sm-2">
        <h2 class="h4 text-light mb-2 mb-sm-0 font-vazir">جدیدترین پروژه ها</h2><a class="btn btn-link btn-light fw-normal px-0" asp-page="./SearchProjects">
            مشاهده همه <i class="fi-arrow-long-left fs-sm mt-0 ps-1 ms-2"></i>
        </a>
    </div>
    <div class="row offer">
        @foreach (var project in Model.LatestProjects)
        {
            <div class="col-lg-4 pt-2">
                <div class="card  card-hover" style="background-color: #1f152b;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="d-flex align-items-center">
                                <img class="me-2 rounded-2" src="~/UploadedFiles/@project.EmployerPicture" width="24"><span class="fs-sm text-white opacity-80 px-1">@project.EmployerName</span>
                                <span class="badge bg-faded-accent rounded-pill fs-sm ms-2">جدید</span>
                            </div>
                            <div class="dropdown content-overlay">
                                <button class="btn btn-icon btn-light btn-xs rounded-circle shadow-sm" type="button" id="contextMenu" data-bs-toggle="dropdown" aria-expanded="false"><i class="fi-dots-vertical"></i></button>
                                <ul class="dropdown-menu my-1" aria-labelledby="contextMenu">
                                    <li>
                                        <a class="dropdown-item" asp-page="./ProjectDetails" asp-route-id="@project.Id"><i class="fi-folder opacity-60 me-2"></i>نمایش پروژه</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <h3 class="h6 card-title pt-1 mb-3"><a class="text-white stretched-link text-decoration-none" asp-page="./ProjectDetails" asp-route-id="@project.Id">@project.Title</a></h3>
                        <div class="fs-sm"><span class="text-nowrap me-3"><i class="fi-info-circle text-muted ms-1"> </i>@(project.IsOpened ? "باز" : "بسته")</span><span class="text-nowrap me-3"><i class="fi-cash fs-base text-muted ms-1"></i>@project.Budget تومان</span></div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Best Editors (carousel)-->
<section class="container pt-sm-5 pt-4 pb-3">
    <div class="d-sm-flex align-items-center justify-content-between mb-3 mb-sm-4 pb-2">
        <h2 class="h4 text-light mb-3 mb-sm-0 font-vazir">برترین ادیتور ها</h2>
        <div class="d-flex align-items-center">
            <ul class="nav nav-tabs nav-tabs-light fs-sm me-4 pe-2 mb-0">
            </ul><a class="btn btn-link btn-light fw-normal px-0" asp-page="./SearchEditors">
                مشاهده همه<i class="fi-arrow-long-left fs-sm mt-0 ps-1 ms-2"></i>
            </a>
        </div>
    </div>
    <div class="tns-carousel-wrapper tns-controls-outside-xxl tns-nav-outside tns-carousel-light">
        <div class="tns-carousel-inner car"
             data-carousel-options="{&quot;items&quot;: 3, &quot;responsive&quot;: {&quot;0&quot;:{&quot;items&quot;:1, &quot;gutter&quot;: 16},&quot;500&quot;:{&quot;items&quot;:2, &quot;gutter&quot;: 18},&quot;900&quot;:{&quot;items&quot;:3, &quot;gutter&quot;: 20}, &quot;1100&quot;:{&quot;gutter&quot;: 24}}}">


            @foreach (var editor in Model.EditorPages)
            {
                <div>
                    <div class="bg-dark h-100 p-4">
                        <div class="card card-light  card-body pb-1 mx-auto" style="max-width: 24rem;">
                            <div class="card-body card card-light align-items-center">

                                <img class="rounded-circle " src="~/UploadedFiles/@editor.Picture" width="70" height="70" alt="@editor.PictureAlt"
                                 title="@editor.PictureTitle">

                                <div class="d-flex d-md-block d-lg-flex text-center mb-4">
                                    <div class="pt-3">
                                        <h2 class="text-light fs-lg mb-0">@editor.FullName</h2>
                                        <h5 class="display-5 mb-1 mt-3 text-light font-vazir border-top">@editor.ReviewsTotalRate</h5>
                                        <div class="progress mb-3 mt-1">
                                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" style="width: @(editor.ReviewsTotalRate * 10)%" aria-valuenow="@(editor.ReviewsTotalRate * 10)" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <ul class="list-unstyled fs-sm mt-3 mb-0 text-end">
                                            <li>
                                                <h4 class="h5 mb-0 text-light"><span class="fs-5">@editor.MinPay-@editor.MaxPay تومان</span><span class="fs-base fw-normal text-warning"> / @editor.PayDate</span></h4>
                                            </li>
                                            <li><a class="nav-link-light fw-normal p-0" href=""><i class="fi-video me-2"></i> تعداد نمونه کار ها : @editor.Portfolios.Count()</a></li>
                                            <li><a class="nav-link-light fw-normal p-0" href=""><i class="fi-mail me-2"></i>تعداد نظرات : @editor.Reviews.Count()</a></li>
                                        </ul>
                                    </div>
                                </div>
