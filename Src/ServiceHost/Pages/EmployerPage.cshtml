@page
@model ServiceHost.Pages.EmployerPageModel
@{
    ViewData["Title"] = "کارفرما";

}
<form method="post" enctype="multipart/form-data">
    <div class="container pt-5 pb-lg-4 mt-5 mb-sm-2">
        <!-- Breadcrumb-->
        <nav class="mb-4 pt-md-3" aria-label="Breadcrumb">
            <ol class="breadcrumb breadcrumb-light">
                <li class="breadcrumb-item"><a asp-page="./Index">خانه</a></li>
                <li class="breadcrumb-item"><a asp-page="./EmployerPage">اکانت من</a></li>
                <li class="breadcrumb-item active" aria-current="page">اطلاعات فردی</li>
            </ol>
        </nav>
        <!-- Page content-->
        <div class="row">
            <!-- Sidebar-->
            <aside class="col-lg-4 col-md-5 pe-xl-4 mb-5">
                <!-- Account nav-->
                <div class="card card-body card-light border-0 shadow-sm pb-1 me-lg-1">
                    <div class="d-flex d-md-block d-lg-flex align-items-start pt-lg-2 mb-4">
                        <img class="rounded-circle" src="~/UploadedFiles/@Model.EmployerPageViewModel.Picture" width="48">
                        <div class="pt-md-2 pt-lg-0 pe-3 pe-md-0 pe-lg-3">
                            <h2 class="fs-lg text-light mb-0 fw-500">@Model.EmployerPageViewModel.FullName</h2>
                            <ul class="list-unstyled fs-sm mt-3 mb-0">
                                <li><a class="nav-link-light fw-normal"><i class="fi-folder opacity-60 me-2"></i>@Model.EmployerPageViewModel.CreationDate</a></li>
                            </ul>
                        </div>
                    </div><a class="btn btn-primary btn-lg w-100 mb-3" asp-page="./AddProject"><i class="fi-plus me-2"></i>ثبت پروژه</a>
                    <a class="btn btn-outline-light d-block d-md-none w-100 mb-3" href="#account-nav" data-bs-toggle="collapse"><i class="fi-align-justify me-2"></i>منو</a>
                    <div class="collapse d-md-block mt-3" id="account-nav">
                        <div class="card-nav">
                            <a class="card-nav-link active" asp-page="./EmployerPage" asp-page-handler="Validate"><i class="fi-user me-2"></i>اطلاعات فردی</a>
                            <a class="card-nav-link" asp-page="./EmployerPageProjects"><i class="fi-video me-2"></i>پروژه ها</a>
                            <a class="card-nav-link" asp-page="./BusinessChat"><i class="fi-chat-right me-2"></i> پیام های کاری</a>
                            <a class="card-nav-link" asp-page="./EmployerPageJobOffers"><i class="fi-alarm me-2"></i>پیشنهاد های ارسال شده</a>
                            <a class="card-nav-link" asp-page="./EmployerPageWallet"><i class="fi-wallet me-2"></i>کیف پول</a>
                            <a class="card-nav-link" asp-page="./Login" asp-page-handler="Logout"><i class="fi-logout me-2"></i>خروج</a>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Content-->
            <div class="col-lg-8 col-md-7 mb-5">
                <h1 class="h4 font-vazir text-light">اطلاعات فردی</h1>
         
                <div class="row pt-2">
                    <div class="col-lg-9 col-md-12 col-sm-8 mb-2 mb-m-4">
                        <div class="border border-light rounded-3 p-3 mb-4" id="personal-info">
                            <!-- Name-->
                            <div class="border-bottom border-light pb-3 mb-3">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="pe-2 opacity-70">
                                        <label class="form-label fw-bold text-light">نام کامل</label>
                                        <div class="text-light" id="name-value">@Model.EmployerPage.FullName</div>
                                    </div>
                                    <div class="me-n3" data-bs-toggle="tooltip" title="ویرایش"><a class="nav-link nav-link-light py-0" href="#name-collapse" data-bs-toggle="collapse"><i class="fi-edit"></i></a></div>
                                </div>
                                <div class="collapse" id="name-collapse" data-bs-parent="#personal-info">
                                    <input asp-for="EmployerPage.FullName" class="form-control form-control-light mt-3" type="text" data-bs-binded-element="#name-value" data-bs-unset-value="مشخص نشده است">
                                </div>
                            </div>
                          
                            <div class="border-bottom border-light pb-3 mb-3">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="pe-2 opacity-70">
                                        <label class="form-label fw-bold text-light">کارت بانکی</label>
                                        <div class="text-light" id="card-value">@Model.EmployerPage.Card</div>
                                    </div>
                                    <div class="me-n3" data-bs-toggle="tooltip" title="افزودن"><a class="nav-link nav-link-light py-0" href="#card-collapse" data-bs-toggle="collapse"><i class="fi-edit"></i></a></div>
                                </div>
                                <div class="collapse" id="card-collapse" data-bs-parent="#personal-info">
                                    <input asp-for="EmployerPage.Card" class="form-control form-control-light mt-3" type="number" data-bs-binded-element="#card-value" placeholder="شماره کارت بانکی خود را وارد کنید.">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-12 col-sm-4 mb-4">
                        @*<input class="file-uploader border-light bg-faded-light" type="file" accept="image/png, image/jpeg" data-label-idle="&lt;i class=&quot;d-inline-block fi-camera-plus fs-2 text-light text-muted mb-2&quot;&gt;&lt;/i&gt;&lt;br&gt;&lt;span class=&quot;text-light opacity-70&quot;&gt;تغییر تصویر&lt;/span&gt;" data-style-panel-layout="compact" data-image-preview-height="160" data-image-crop-aspect-ratio="1:1" data-image-resize-target-width="200" data-image-resize-target-height="200">*@
                        <label asp-for="EmployerPage.Picture" class="text-light">عکس</label>
                        <input asp-for="EmployerPage.Picture" class="form-control-light" type="file" style="display: inline" />
                        
                    </div>
                </div>
                <input type="hidden" asp-for="EmployerPage.Id" value="@Model.EmployerPage.Id" />
                <!-- Action buttons-->
                <div class="row">
                    <div class="col-lg-9">
                        <div class="d-flex align-items-center justify-content-between pb-1">
                            <button class="btn btn-primary" type="submit">ذخیره تغییرات</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
