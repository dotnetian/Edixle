@page
@using BlogManagement.Infrastructure.Configuration.Permissions
@model ServiceHost.Areas.Administration.Pages.PortfolioCategory.IndexModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title pull-right">@ViewData["title"]</h4>
            <p permission="@BlogPermissions.CreateAndEditArticleCategory" class="pull-left">
                <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد گروه تکنولوژی</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">جستجو در تکنولوژی ها</h3>
                </div>
                <div class="panel-body">
                    <form class="form-inline" role="form" method="get">
                        <div class="form-group">
                            <label class="sr-only" name="name"></label>
                            <input class="form-control" name="name" placeholder="نام" />
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                        <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="ProductCategoriesDiv">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">لیست تکنولوژی ها (@Model.Categories.Count)</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>عکس</th>
                                        <th>نام</th>
                                        <th>تاریخ تولید</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Categories)
                                    {

                                        <tr>
                                            <td>@item.Id</td>
                                            <td><img style="width: 100px; height: 100px" class="rounded-2" src="~/UploadedFiles/@item.Picture"/></td>
                                            <td>@item.Name</td>
                                            <td>@item.CreationDate</td>
                                            <td>
                                                <a permission="@BlogPermissions.CreateAndEditArticleCategory" class="btn btn-warning waves-effect waves-light m-b-5"
                                                   href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                    <i class="fa fa-edit"></i> ویرایش
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
