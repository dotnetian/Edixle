@page
@model ServiceHost.Areas.Administration.Pages.EditorPlan.CreateModel
@{

}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد پلن جدید</h4>
</div>

<form
      method="post"
      enctype="multipart/form-data">
    <div class="modal-body">
            <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="AddEditorPlan.Title" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="AddEditorPlan.Title" onchange="makeSlug('AddEditorPlan_Title', 'AddEditorPlan_PictureAlt'), makeSlug('AddEditorPlan_Title', 'AddEditorPlan_PictureTitle')">
                    <span asp-validation-for="AddEditorPlan.Title" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AddEditorPlan.ChatUploadSizeLimit" class="control-label"> سایز اپلود فایل چت(byte)</label>
                    <input type="number" class="form-control" asp-for="AddEditorPlan.ChatUploadSizeLimit">
                    <span asp-validation-for="AddEditorPlan.ChatUploadSizeLimit" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AddEditorPlan.PortfolioUploadSizeLimit" class="control-label"> سایز اپلود فایل نمونه کار(byte)</label>
                    <input type="number" class="form-control" asp-for="AddEditorPlan.PortfolioUploadSizeLimit">
                    <span asp-validation-for="AddEditorPlan.PortfolioUploadSizeLimit" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AddEditorPlan.ExpireDays" class="control-label">تعداد روز ها</label>
                    <input type="number" class="form-control" asp-for="AddEditorPlan.ExpireDays">
                    <span asp-validation-for="AddEditorPlan.ExpireDays" class="error"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AddEditorPlan.VipProjectOfferCount" class="control-label">تعداد پیشنهاد پروژه ویژه</label>
                    <input type="number" class="form-control" asp-for="AddEditorPlan.VipProjectOfferCount">
                    <span asp-validation-for="AddEditorPlan.VipProjectOfferCount" class="error"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AddEditorPlan.Price" class="control-label">قیمت</label>
                    <input type="number" class="form-control" asp-for="AddEditorPlan.Price">
                    <span asp-validation-for="AddEditorPlan.Price" class="error"></span>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="AddEditorPlan.Description" class="control-label">توضیحات</label>
                    <textarea rows="14" class="form-control autogrow" id="BodyContent" asp-for="AddEditorPlan.Description"
                              style="overflow: hidden; word-wrap: break-word; resize: vertical;"></textarea>
                    <span asp-validation-for="AddEditorPlan.Description" class="error"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>

<script src="https://cdn.tiny.cloud/1/xx7w4yhewzptxxt67fpih1f1wu93ajadjc5q7e1dr7qvq37a/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: '#BodyConten',
        plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
        toolbar: 'a11ycheck addcomment showcomments casechange checklist code export formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
    });
</script>